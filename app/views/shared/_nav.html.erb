<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Question Box", root_path, class: "left" %></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <% if logged_in? %>
        <li><%= link_to "Logged in as #{current_user.name}", "#" , class: "right" %></li>
        <li><%= link_to "Logout", login_path, method: :delete, class: "right" %></li>
      <% else %>
        <li><%= link_to "Login", login_path, class: "right" %></li>
      <% end %>
    </ul>
    <!-- Left Nav Section -->
    <ul class="left">
      <li><%= link_to "All questions", questions_path, class: "left" %></li>
      <% if logged_in? %>
        <li><%= link_to "New question", new_question_path, class:"left" %></li>
      <% end %>
    </ul>
  </section>
</nav>